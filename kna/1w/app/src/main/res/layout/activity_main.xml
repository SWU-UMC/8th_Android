<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/icon">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="130dp">
    </TextView>
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="감정우표를 선택해주세요"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="5dp">
    </TextView>
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
        android:textSize="7sp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="15dp">
    </TextView>
    <ImageView
        android:id="@+id/b1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="180dp"
        android:src="@drawable/b1"
        android:clickable="true"
        tools:ignore="SpeakableTextPresentCheck">
    </ImageView>
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="더없이 행복한 하루였어요"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="10dp">
    </TextView>

    <ImageView
        android:id="@+id/b2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="185dp"
        android:src="@drawable/b2">
    </ImageView>
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="들뜨고 흥분돼요"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp">
    </TextView>

    <ImageView
        android:id="@+id/b3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="185dp"
        android:src="@drawable/b3">
    </ImageView>
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="평범한 하루였어요"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="10dp">
    </TextView>

    <ImageView
        android:id="@+id/b4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="185dp"
        android:src="@drawable/b4">
    </ImageView>
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="생각이 많아지고 불안해요"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="10dp">
    </TextView>

    <ImageView
        android:id="@+id/b5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="185dp"
        android:src="@drawable/b5">
    </ImageView>
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="부글부글 화가 나요"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="10dp">
    </TextView>
</LinearLayout>