<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="185px"
        android:text="오늘 하루는 어땠나요? "
        android:fontFamily="@font/gangwonedu_hyeonokt"
        android:textSize="22dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11px"
        android:text="감정우표를 선택해주세요 "
        android:fontFamily="@font/gangwonedu_hyeonokt"
        android:textSize="14dp" />

    <TextView
        android:layout_marginTop="36px"
        android:textSize="8dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:fontFamily="@font/gangwonedu_hyeonokt"
        android:layout_height="wrap_content"
        android:text = "선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다 " />


    <ImageView
        android:layout_marginTop="53px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/image1" />

    <TextView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/gangwonedu_hyeonokt"
        android:text = "더 없이 행복한 하루였어요" />

    <ImageView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/image2" />

    <TextView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/gangwonedu_hyeonokt"
        android:text = "들뜨고 흥분돼요" />


    <ImageView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/image3" />

    <TextView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/gangwonedu_hyeonokt"
        android:text = "평범한 하루였어요" />

    <ImageView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/image4" />

    <TextView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/gangwonedu_hyeonokt"
        android:text = "생각이 많아지고 불안해요" />


    <ImageView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/image5" />

    <TextView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/gangwonedu_hyeonokt"
        android:text = "부글부글 화가 나요" />



</LinearLayout>

